{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false, // library bundles rarely need JS source maps
    "noEmit": false // override the base config
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"]
}
